{% extends 'ReshipiWebBundle::layout.html.twig' %}

{% block body %}
    <div class="row-fluid">
        <div class="span12">
            <form class="form-inline" action="{{ path('reshipi_web_recipe_create') }}" method="post">
                <input type="hidden" name="collection" value="{{ collection.slug }}">
                <input type="text" class="input-medium" name="name" placeholder="recipe name">
                <input type="text" class="input-medium" name="url" placeholder="recipe repo url">
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Repo URL</th>
                </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td>{{ recipe.name }}</td>
                        <td>{{ recipe.url }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
