{% extends 'ReshipiWebBundle::layout.html.twig' %}

{% block body %}
<div class="row-fluid">
    <div class="span12">
        <form class="form-inline" action="{{ path('reshipi_web_collection_create') }}" method="post">
            <input type="text" class="input-small" name="name" placeholder="collection name">
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>Archive URL</th>
            </tr>
            </thead>
            <tbody>
            {% for collection in collections %}
            <tr>
                <td><a href="{{ path('reshipi_web_collection_get', {'slug': collection.slug}) }}">{{ collection.name }}</a></td>
                <td><a href="{{ path('reshipi_web_archive_get', {'slug': collection.slug}) }}">{{ url('reshipi_web_archive_get', {'slug': collection.slug}) }}</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
